// NEWTON'S ALGORÄ°THM FOR eccentric/ ecliptic anomaly
#include<stdio.h>
#include<math.h>

int main()
{
double E , M, e , d2r;
FILE *out;
out = fopen("test.txt","w");
int error;
int kepler(double M,double e,double *E);
int i, j;

double step_e = 1.0/500;
double step_M = 2*M_PI/500.0; 
for (i=0; i<500; i++) {
e = i* step_e ;
 for( j=0; j<500; j++) {
M = j* step_M ;
error = kepler( M, e, &E) ;
fprintf( out,"%d %.15le %.15le %.15le\n",error,e,M,E);
}
}
fclose(out);
return 0;
}
int kepler(double M,double e,double *E) {
    int error, count;
    double t, F, dF ;
    double eps_r = 1e-10; 
    double eps_a = 1e-13;
    error = 0;
    count = 0;
    if (e >= 1) {
        printf("eccentricity is greater or equal to 1 \n ") ;
        error = 1;
    }
    else
    {  
    *E = M;
    do { 
        count ++ ;
    t = *E;    
    F= M -t -e*sin(t);
    dF= e*cos(t)-1;
    *E= t -F/dF; 
    }
    while ( fabs(*E-t)> eps_r*fabs(t)+ eps_a && count<50);
    if (count==50){
        error = 2;
    }
    }
    return (error) ;
    }



